<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <p><b><%= f.label :product_id %>:</b> <%= f.hidden_field :product_id, :value => @product.id, :size => 1 %> <%= @product.name  %>
  </div>
  <div class="field">
    <p><b><%= f.label :customer_id %>:</b>  <%=f.hidden_field :customer_id, :value => @current_user.id, :size => 1 %> <%= @current_user.name  %>
  </div>
  <div class="field">
    <p><b><%= f.label :dateOfPurchase %>:</b> <%=f.hidden_field :dateOfPurchase, :value => Date.today %><%= Date.today %>
  </div>
  <div class="field">
   <p><b><%= f.label :deliveryAddress %>:</b>  <%=f.hidden_field :deliveryAddress, :value => @current_user.address, :size => 1 %> <%= @current_user.address  %>
  </div>
  <div class="field">
   <p><b> <%= f.label :creditCard %></b></p>
   <p> <%= f.text_field :creditCard %></p>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
